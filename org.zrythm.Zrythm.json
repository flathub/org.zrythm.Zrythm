                        "tag-query": ".tag_name",
                        "version-query": "$tag | sub(\"^jq-\"; \"\")",
                        "timestamp-query": ".published_at"
                    }
                }
            ],
            "cleanup": [
                "*.a",
                "*.la",
                "/include",
                "/share/info",
                "/share/doc",
                "/lib/pkgconfig"
